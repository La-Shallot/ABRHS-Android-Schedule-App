        app:nts_color="#ff1748"
        app:nts_factor="2.8"
        app:nts_corners_radius="1.5dp"
        app:nts_inactive_color="#81ffffff"
        app:nts_titles="@array/daysOfWeek"
        app:nts_typeface="fonts/raleway"
        app:nts_weight="3dp"
        app:nts_type = "point"
        app:nts_size="15dp"/>





