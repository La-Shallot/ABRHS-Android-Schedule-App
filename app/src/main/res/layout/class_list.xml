    <RelativeLayout
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent">

        <TextView
            android:fontFamily="@font/raleway"
            android:textSize="70sp"
            android:text="A"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/class_item_period"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/class_item_period"
            android:id="@+id/class_item_time">

            <TextView
                android:id="@+id/class_item_start_time"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:fontFamily="@font/raleway"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text = "XX:XX"/>

            <TextView
                android:id="@+id/class_item_end_time"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:fontFamily="@font/raleway"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text = "XX:XX"/>


        </LinearLayout>



        <TextView
            android:fontFamily="@font/raleway"
            android:textSize="48sp"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/class_item_name"
            android:text="English"
            android:layout_toRightOf="@+id/class_item_time"/>

    </RelativeLayout>





