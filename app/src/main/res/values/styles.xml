<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "ClassStyle">
        <item name = "android:textSize"> 30sp </item>
        <item name = "android:textColor"> #454545 </item>
        <item name = "android:fontFamily"> @font/raleway </item>
    </style>

    <style name="currentClassStyle">
        <item name = "android:textSize"> 50sp </item>
        <item name = "android:textColor"> #ffffff </item>
        <item name = "android:fontFamily"> @font/raleway </item>
    </style>

    <style name = "Setup_Title">
        <item name = "android:fontFamily"> @font/raleway </item>
        <item name = "android:textSize"> 35sp </item>
        <item name = "android:gravity"> center </item>
        <item name = "android:paddingRight"> 10dp </item>
        <item name = "android:paddingLeft"> 10dp </item>
        <item name = "android:paddingTop"> 30dp </item>
        <item name = "android:paddingBottom"> 20dp </item>
        <!--<item name = "android:background"> @color/darkGray </item>-->
        <item name = "android:textColor"> @color/darkGray </item>
    </style>

    <style name = "Title">
        <item name = "android:fontFamily"> @font/raleway </item>
        <item name = "android:textSize"> 50sp </item>
        <item name = "android:padding"> 20dp </item>
        <item name = "android:textColor"> @color/darkGray </item>
    </style>


    <style name="Instructions">
        <item name = "android:textSize"> 20sp </item>
        <item name = "android:paddingTop"> 10dp </item>
        <item name = "android:paddingBottom"> 10dp </item>
        <item name = "android:paddingRight"> 5dp </item>
        <item name = "android:paddingLeft"> 5dp </item>
        <item name = "android:fontFamily"> @font/raleway </item>
        <item name = "android:textColor"> @color/darkGray </item>
    </style>

    <style name="EditText">

        <item name = "android:fontFamily"> @font/raleway </item>
        <item name = "android:textSize"> 20sp </item>
        <item name="android:layout_marginTop"> 25dp </item>
        <item name="android:layout_marginRight"> 20dp </item>
        <item name="android:layout_marginLeft"> 20dp </item>
        <item name = "android:textAlignment"> center </item>
    </style>

</resources>
